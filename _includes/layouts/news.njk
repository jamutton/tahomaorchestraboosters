---
layout: layouts/base.njk
---
<article class="py-20">
    <div class="container mx-auto px-4 max-w-3xl">
        <a href="/news" class="text-tahoma-blue font-bold mb-8 inline-block hover:underline">&larr; Back to News</a>
        
        <header class="mb-12 text-center">
            <time class="text-tahoma-gold font-bold uppercase tracking-widest">{{ date | readableDate }}</time>
            <h1 class="text-5xl font-black text-tahoma-blue mt-4">{{ title }}</h1>
        </header>

        <div class="prose prose-xl prose-slate max-w-none">
            {{ content | safe }}
        </div>
    </div>
</article>
